<%-include("partials/meta") %> 
<div class='d-flex w-100  justify-content-center'>
<div style='background-color: white; border-radius: 15px;' class='d-flex flex-column mt-2 h-100 p-4 align-items-center justify-content-center'>
<h2>Upload File(s)</h2>
 <div class="d-flex d-none justify-content-center profile-loader  loader mb-2 mt-2 ml-2">
  <div class="spinner-border" role="status">
    <span class="visually-hidden">Loading...</span>
  </div>
</div> 


<form class='d-flex flex-column mt-2 upload-form'>
  <div class="form-group mt-2">
    <label for="user-id">User ID</label>
    <input value="" required type="text" class="form-control" id="userId" placeholder="Enter the user ID if any">
    <small id="userId-help" class="form-text text-muted">Ignore if there is no user ID or If it is your (ADMIN)  content.</small>
  </div> 
  <div class="form-group mt-2">
    <label for="pdf-file">Choose File(s)</label>
    <input required accept="image/png, image/jpeg" multiple type="file" class="form-control" id="pdf-file" >
  </div>
  <div class="form-group mt-2">
    <label for="keywords">SEO friendly Title</label>
    <input required type="text" class="form-control" id="keywords" placeholder="Enter the keywords">
  </div> 
  <div class="form-group mt-2">
    <label for="classes">Class for each file</label>
    <input required type="text" class="form-control" id="classes" placeholder="Enter the class names">
  </div> 
  <div class="form-group mt-2">
    <label for="subjects">Subject for echa file</label>
    <input required type="text" class="form-control" id="subjects" placeholder="Enter the subjects">
  </div> 
  <div class="form-group mt-2">
    <label for="description">Description</label>
    <textarea required cols='50' row='7' type="text" class="form-control" id="description" placeholder="Enter a short description" ></textarea>
  </div>
  
  <button type="submit" class="btn mt-2 btn-contribute">Submit</button>
</form>

</div>
</div>
  <%-include("partials/scripts") %> 